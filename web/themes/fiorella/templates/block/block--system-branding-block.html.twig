{% extends "block.html.twig" %}

{% block content %}
  <div class="d-flex align-items-center">
    {% if site_logo %}
      <a class="navbar-brand" href="{{ path('<front>') }}">
        <img width="50" src="{{ site_logo }}" alt="{{ 'Home'|t }}" />
      </a>
    {% endif %}
    {% if site_name %}
      <a class="navbar-brand" href="{{ path('<front>') }}">{{ site_name }}</a>
    {% endif %}
    {{ site_slogan }}
  </div>
{% endblock %}
